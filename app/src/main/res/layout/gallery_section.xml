<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:background="@color/gray_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/img_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:background="@color/gray_light"
        app:layout_constraintStart_toEndOf="@id/img_1"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/img_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:background="@color/gray_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_1"/>
    <ImageView
        android:id="@+id/img_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:background="@color/gray_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_3"/>
    <ImageView
        android:id="@+id/img_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/img_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        app:layout_constraintStart_toEndOf="@id/img_5"/>
    <ImageView
        android:id="@+id/img_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        app:layout_constraintStart_toEndOf="@id/img_6"/>
    <ImageView
        android:id="@+id/img_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        app:layout_constraintStart_toEndOf="@id/img_7"/>

</androidx.constraintlayout.widget.ConstraintLayout>